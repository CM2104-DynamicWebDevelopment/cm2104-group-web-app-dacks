<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Include the head EJS file and insert it into the template -->
    <%- include('../partials/head') %>
</head>

<!-- Start of body -->
<body>

    <!-- Virus image that follows the cursor -->
    <div id="image">
        <img src="img/virus.png" alt="virus">
    </div>

    <!-- Video header that starts a video automatically and loops it -->
    <header>
        <div class="overlay"></div>
        <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
            <source src="https://www.sandwichmelody.com/wp-content/uploads/2020/01/video2.mp4" type="video/mp4">
        </video>

        <!-- Align a title in the middle of video header -->
        <div class="container h-100">
            <!-- Include the videoText EJS file and insert it into the template -->
            <%- include('../partials/videoText') %>
        </div>
    </header>
    <!-- End of video header -->

    <br>
    <br>
    <!-- Include the navbar EJS file and insert it into the template -->
    <%- include('../partials/navbar') %>
        <!-- End of nav bar -->

        <!-- Create a container to display each tab in -->
        <div class="tab-content py-3 px-3 px-sm-0 d-flex justify-content-center" id="nav-tabContent">
            <!-- Tab content for the homepage -->
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">

                <!-- Flash the text for the infected total -->
                <!-- Include the statistics and infectedTotal EJS files and insert them into their templates -->
                <%- include('../partials/statistics') %>
                <%- include('../partials/infectedTotal') %>
                <!-- End flash -->

                    <!-- Container to store about NCOV and tweets -->
                    <div class="container-fluid">
                        <div class="row" id="containerRows">
                            <!-- Include the aboutNcov EJS file and insert it into the template -->
                            <%- include('../partials/aboutNcov') %>

                            <!-- Include the twitterPublish EJS file and insert it into the template -->
                            <%- include('../partials/twitterPublish') %>
                        </div>
                    </div>
                    <!-- End of container -->

                    <!-- Include the googlemap EJS file and insert it into the template -->
                    <%- include('../partials/googlemap') %>
            </div>
            <!-- End of tab content for the homepage -->

            <!-- Tab content for the timeline page, data passed in from db -->
            <div class="tab-pane fade show" id="nav-timeline" role="tabpanel" aria-labelledby="nav-timeline-tab">
                <!-- The timeline -->
                <div class="timeline">
                    <!-- Template to show timeline from database -->
                    <!-- To view the output from the db you can also go to the /showtimeline route -->
                    <%- timeline %>
                </div>
            </div>
            <!-- End of tab content for the timeline page -->

            <!-- Tab content for the stay safe and symptoms page -->
            <div class="tab-pane fade show" id="nav-staysafe" role="tabpanel" aria-labelledby="nav-staysafe-tab">
                <!-- Include the staysafe EJS file and insert it into the template -->
                <%- include('../partials/staysafe') %>
            </div>
            <!-- End of tab content for the stay safe and symptoms page -->
        </div>
        
        <!-- pop up message -->
        <div id="dialog">
            <p id="pop"></p>
        </div>
        
        <!-- Back to top button -->
        <a id="back-to-top-a"><img id="back-to-top" src="img/iconfinder_Arrow_Drop_Up_1063880.png" /></a>

        <!-- Include the contact EJS file and insert it into the template -->
        <%- include('../partials/contact') %>
    
        <!-- Include the footer EJS file and insert it into the template -->
        <%- include('../partials/footer') %>
        <!-- End of footer -->
        
        <!-- Include the quiz EJS file and insert it into the template -->
        <%- include('../partials/quiz') %>
</body>
<!-- End of body -->

</html>
